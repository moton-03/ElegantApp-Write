<Page
    x:Class="Write.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2' x:Name="ContentArea">
        <StackPanel Orientation="Vertical">
            <CommandBar Background="Transparent" IsOpen="False" DefaultLabelPosition="Bottom">
                <AppBarButton x:ConnectionId='4' x:Name="New" Icon="NewFolder" Label="New"                  />
                <AppBarButton x:ConnectionId='5' x:Name="Open" Icon="OpenFile" Label="Open"                   />
                <AppBarButton x:ConnectionId='6' x:Name="Save" Icon="Save" Label="Save"                   />
                <AppBarButton x:ConnectionId='7' x:Name="SaveAs" Icon="SaveLocal" Label="Save As"                     />
                <AppBarSeparator></AppBarSeparator>
                <AppBarButton x:ConnectionId='8' x:Name="Text" Icon="Tag" Label="Text"                   />
                <AppBarButton x:ConnectionId='9' x:Name="Time" Icon="Calendar" Label="Time"                   />
                <AppBarSeparator></AppBarSeparator>
                <AppBarButton x:ConnectionId='10' x:Name="Undo" Icon="Undo" Label="Undo"                   />
                <AppBarButton x:ConnectionId='11' x:Name="Redo" Icon="Redo" Label="Redo"                   />
                <AppBarButton x:ConnectionId='12' x:Name="ClearHistory" Icon="Clear" Label="Clear History"                           />
                <AppBarSeparator></AppBarSeparator>
                <AppBarButton x:ConnectionId='13' x:Name="SelectAll" Icon="SelectAll" Label="Select All"                        />
                <AppBarButton x:ConnectionId='14' x:Name="MoveCursor" Icon="MoveToFolder" Label="Move Cursor"                         />
                <AppBarSeparator></AppBarSeparator>
                <AppBarButton x:ConnectionId='15' x:Name="Cut" Icon="Cut" Label="Cut"                  />
                <AppBarButton x:ConnectionId='16' x:Name="Copy" Icon="Copy" Label="Copy"                   />
                <AppBarButton x:ConnectionId='17' x:Name="Paste" Icon="Paste" Label="Paste"                    />
                <AppBarButton x:ConnectionId='18' x:Name="Delete" Icon="Delete" Label="Delete"                     />
                <AppBarSeparator></AppBarSeparator>
                <AppBarButton x:ConnectionId='19' x:Name="Find" Icon="Find" Label="Find"                   />
                <AppBarToggleButton x:ConnectionId='20' x:Name="Warp" Icon="Undo" Label="Warp"                                                  />
            </CommandBar>
            <ScrollViewer MaxHeight="500"
                          HorizontalScrollMode="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollMode="Auto"
                          VerticalScrollBarVisibility="Auto">
                <TextBox x:ConnectionId='3' x:Name="TextBox"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap">

                </TextBox>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>

